<h1><%= t('.title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= Employee.human_attribute_name(:id) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:name) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:email) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:age) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:street) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:house_number) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:neighborhood) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:city) %></th>
      <th scope="col"><%= Employee.human_attribute_name(:state) %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <%= render employee %>
    <% end %>
  </tbody>
</table>
